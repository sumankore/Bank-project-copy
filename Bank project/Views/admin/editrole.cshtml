@model Bank_project.Models.resultviewmodel

@{ ViewBag.Title = "editrole"; }

<h2>editrole</h2>


@using (Html.BeginForm())
{
@Html.AntiForgeryToken() for (int i = 0; i < Model.roletyplist.Count(); i++)
                {
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => Model.roletyplist[i].roleid)

    <div class="form-group">
        @Html.LabelFor(model => Model.roletyplist[i].rolename, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.HiddenFor(model => Model.roletyplist[i].rolename, new { htmlAttributes = new { @class = "form-control" } })
            @ViewBag.Accountype
            @{TempData["actype"] = ViewBag.Accountype;}
            @Html.ValidationMessageFor(model => Model.roletyplist[i].rolename, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        @Html.LabelFor(model => Model.roletyplist[i].roleid, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @ViewBag.roleid
            @{TempData["actypeid"] = ViewBag.roleid;}
            @Html.HiddenFor(model => Model.roletyplist[i].roleid, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => Model.roletyplist[i].roleid, "", new { @class = "text-danger" })
        </div>
    </div>
   

    <div class="form-group">
        @Html.HiddenFor(model => Model.roletyplist[i].isactive, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.HiddenFor(model => Model.roletyplist[i].isactive)
                @Html.ValidationMessageFor(model => Model.roletyplist[i].isactive, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>}
            }

